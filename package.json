{
  "name": "react-boilerplate",
  "version": "1.0.0",
  "description": "",
  "main": "index.js",
  "scripts": {
    "build": "webpack --config ./webpack/bundle.config.babel.js",
    "build:dev": "NODE_ENV=development webpack --config ./webpack/bundle.config.babel.js",
    "build:prod": "NODE_ENV=production webpack --config ./webpack/bundle.config.babel.js",
    "build-babel": "yarn build-babel-server && yarn build-babel-client",
    "build-babel-server": "babel src/server --ignore __tests__ --out-dir ./dist",
    "build-babel-client": "babel src/client --copy-files --out-dir ./dist/public",
    "start": "node ./dist/server.js",
    "test": "jest ./src",
    "clean": "rm -rf ./dist && rm -rf ./node_modules",
    "dev:client": "bnr dev:client",
    "dev:server": "bnr dev:server",
    "build:client:prod": "bnr build:client:prod",
    "build:server": "webpack --config ./webpack/server.config.babel.js",
    "stats": "NODE_ENV=production webpack --config ./webpack/bundle.config.babel.js --profile --json > stats.json && webpack-bundle-analyzer stats.json dist/public"
  },
  "betterScripts": {
    "dev:server": {
      "command": "webpack --config ./webpack/server.config.babel.js",
      "env": {
        "NODE_ENV": "development",
        "SERVICE_NAME": "renderer",
        "DEBUG": "*renderer*, *koa*"
      }
    },
    "dev:client": {
      "command": "webpack-serve --config ./webpack/serve.config.babel.js",
      "env": {
        "NODE_ENV": "development",
        "SERVICE_NAME": "client",
        "DEBUG": "*client*"
      }
    },
    "build:client:prod": {
      "command": "webpack --config ./webpack/client.config.babel.js",
      "env": {
        "NODE_ENV": "production",
        "SERVICE_NAME": "client",
        "DEBUG": "*client*"
      }
    }
  },
  "author": "Jacky Efendi",
  "license": "ISC",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/jackyef/react-boilerplate.git"
  },
  "keywords": [
    "Node",
    "React",
    "Emotion",
    "Styled components",
    "Codesplitting",
    "Boilerplate"
  ],
  "bugs": {
    "url": "https://github.com/jackyef/react-boilerplate/issues"
  },
  "homepage": "https://github.com/jackyef/react-boilerplate#readme",
  "dependencies": {
    "app-root-dir": "^1.0.2",
    "babel-plugin-emotion": "^9.2.0",
    "babel-plugin-syntax-dynamic-import": "^6.18.0",
    "babel-polyfill": "^6.26.0",
    "babel-preset-stage-0": "^6.24.1",
    "better-npm-run": "^0.1.1",
    "compression": "^1.7.2",
    "config": "^2.0.1",
    "connect-history-api-fallback": "^1.5.0",
    "connected-react-router": "^4.3.0",
    "debug": "^3.1.0",
    "dotenv": "^6.0.0",
    "emotion": "^9.2.3",
    "express": "^4.16.3",
    "fs-extra": "^7.0.0",
    "history": "^4.7.2",
    "koa": "^2.5.2",
    "koa-connect": "^2.0.1",
    "koa-pino-logger": "^2.1.3",
    "koa-static": "^5.0.0",
    "prop-types": "^15.6.2",
    "react": "^16.4.1",
    "react-dom": "^16.4.1",
    "react-emotion": "^9.2.3",
    "react-hot-loader": "^4.3.3",
    "react-loadable": "^5.4.0",
